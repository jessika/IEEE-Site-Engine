#navbar
  #user_nav
    - if User.exists? and current_user
      %a.link_logout{:href => "/logout"} LOGOUT
      %a.link_logout{:href => users_edit_path(current_user)} USER SETTINGS
    - else
      %a.link_login{:href => "/login"} LOGIN
  #header
    .content
      #logo
        = link_to image_tag("sky/b_ieee_small.png"), home_url
      %ul#navigation
        %li
          = link_to "HOME", home_url, :class => "home_link"
        %li
          = link_to "EVENTS", events_path, :class => "events_link"
        %li
          = link_to "INDUSTRIAL RELATIONS", industry_information_url, :class => "ir_link"
        %li
          = link_to "H.O.P.E.", hope_about_url, :class => "hope_link"
        %li
          = link_to "SCOPE", statics_scope_path, :class => "scope_link"
        %li
          = link_to "ABOUT IEEE", about_information_url, :class => "about_link"
