= form_for @e, :url => @url_path,  :html => { :multipart => true } do |f|
  - if @e.errors.any?
    - @e.errors.full_messages.each do |message|
      .message_error
        %p= message
  %p
    #label
      = f.label :title
    = f.text_field :title
  %p
    #label
      = f.label :location
    = f.text_field :location
  %p
    #label
      = f.label :description
    %br/
    = f.text_area :description
  %p
    #label
      = f.label :event_start
    = f.datetime_select :event_start
  %p
    #label
      = f.label :event_end
    = f.datetime_select :event_end
  %p.button= f.submit
